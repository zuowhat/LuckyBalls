<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<LinearLayout 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/dialog_ball_red"
    >
	
	 <TextView
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal|center_vertical"
	    android:text="红球选中球数"
	    android:textSize="10pt"
	    android:textColor="#ffffff"
	 />
	 <GridView
        android:id="@+id/show_red_gridview"
        android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:numColumns="4"
android:verticalSpacing="10dp"
android:horizontalSpacing="8dp"
android:stretchMode="columnWidth"
android:gravity="center"
android:columnWidth="60dp"
    />
	 
	 </LinearLayout>
	 
    <View 
	    android:layout_width="fill_parent" 
	    android:layout_height="2dip"
		android:background="#ffffff" />
    
    <LinearLayout 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/dialog_ball_blue"
    >
    
        
    <TextView
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal|center_vertical"
	    android:text="蓝球选中球数"
	    android:textSize="10pt"
	    android:textColor="#ffffff"
	 />
	 <GridView
        android:id="@+id/show_blue_gridview"
       android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:numColumns="4"
android:verticalSpacing="10dp"
android:horizontalSpacing="7dp"
android:stretchMode="columnWidth"
android:gravity="center"
android:columnWidth="60dp"
    />
	 
	 </LinearLayout>
     <View 
        android:layout_marginBottom="2dip"
	    android:layout_width="fill_parent" 
	    android:layout_height="2dip"
		android:background="#ffffff" />
     <LinearLayout 
         android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:background="@drawable/dialog_ball_zhu"
    android:gravity="center_vertical"
         >
 		<TextView 
 		    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="您想购买几注: "
	    android:textColor="#ffffff"
 		    />
     
     <EditText 
         android:id="@+id/scrNum"
         android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:numeric="integer"
	    android:singleLine="true"
         />
     
     </LinearLayout>
     <View 
        android:layout_marginBottom="2dip"
	    android:layout_width="fill_parent" 
	    android:layout_height="2dip"
		android:background="#ffffff" 
		/>
     <LinearLayout 
         android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="5dp"
    android:paddingLeft="6dp"
         >
 
  <Button 
        android:id="@+id/showDialogOk"
	    android:layout_width="50dp"
	    android:layout_height="wrap_content"
	    android:text="投注"
	    android:background="@drawable/bt_bac"
		 />
  
  <Button 
        android:layout_marginLeft="35dp"
        android:id="@+id/showDialogBack"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="重新选号"
	    android:background="@drawable/bt_bac"
		 />
  
  <Button 
        android:layout_marginLeft="35dp"
        android:id="@+id/showDialogGo"
	    android:layout_width="60dp"
	    android:layout_height="wrap_content"
	    android:text="去开奖"
	    android:background="@drawable/bt_bac"
		 />
  </LinearLayout>
</LinearLayout>
